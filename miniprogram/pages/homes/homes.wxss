.container{
  height: 100vh;
  width: 750rpx;
  background: linear-gradient(to bottom right,rgb(64,153,235),rgb(76,85,164));
}
.container .schoolName,
.container .major,
.container .number,
.container .trueName{
  margin:50rpx auto;
  height: 200rpx;
  width: 500rpx;
  text-align: center;
  background-color: #fff;
}
.container .schoolName view,
.container .major view,
.container .number view,
.container .trueName view{
  height: 100rpx;
  width: 500rpx;
  line-height: 100rpx;
  font-weight: bold;
  background-color: #000;
  color: #fff;
  box-shadow: 0px 10px 5px #888888;
}
input{
  height: 96rpx;
  line-height: 96rpx;
  width: 496rpx;
  border:2rpx solid black;
}
.rec2,
.rec1{
  position: absolute;
  height: 300rpx;
  top:50rpx;
  left:125rpx;
  background-color: #000;
  color: #fff;
  z-index: 99;
  text-align: center;
  overflow: auto;
}
.rec2 .list,
.rec1 .list{
  height: 99rpx;
  width: 500rpx;
  line-height: 99rpx;
  border-bottom: 1rpx dashed #eee;
}
.rec2{
  top:250rpx;
}