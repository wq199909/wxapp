/* pages/rank/rank.wxss */
.container .logged{
  height: 100vh;
  width:750rpx;
  background:linear-gradient(to bottom right,rgb(64,153,235),rgb(76,85,164));
}
/* 未登录状态图片位置 */
.container .login .support .head{
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
  display: flex;
  text-align: center;
  justify-content: center; 
  align-items: center;  
}
/* 未登录状态图片大小 */
.container .login .support .head image {
  width: 200rpx;
  height: 200rpx;
}
/* 未登录状态文字位置 */
.container .login .support .content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}
/* 未登录文字样式 */
.container .login .support .content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
/* 授权登录按钮样式 */
.container .login .support .btn {
  border-radius: 80rpx;
  position: absolute;
  height: 100rpx;
  width: 500rpx;
  left:125rpx;
  bottom:130rpx;
  font-size: 50rpx;
  display: flex;
  text-align: center;
  justify-content: center; 
  align-items: center;  
}
/* 版本不支持提示信息样式 */
.container .login .notSupport{
  margin-top:50vh;
}
.container .input{
  position: absolute;
  top:50rpx;
  left:0;
  display: block;
  height: 100rpx;
  width: 750rpx;
}
.container .input input{
  margin: 0 0 0 25rpx;
  display: inline-block;
  height: 100rpx;
  width: 470rpx;
  background-color: #fff;
  box-shadow: 0 1rpx 0 rgba(255,255,255,0.24), 0 1rpx 6px rgba(0,0,0,0.45) inset;
  border-radius: 10rpx;
  padding-left: 30rpx;
}
.btn{
  display: inline-block;
  height: 100rpx;
  width: 200rpx;
}
.container .main{
  height: 750rpx;
  width: 700rpx;
  margin: 200rpx 25rpx 0 25rpx;
}
.container .main .todo,
.container .main .done{
  background-color: #fff;
  height: 350rpx;
  position: relative;
}
.container .main .todo{
  margin-bottom: 50rpx;
}
.main .head{
  display: block;
  font-weight: bold;
  font-size: 1.5rem;
  background-color:#eee;
  box-shadow: 0 0rpx 0 rgba(255,255,255,0.24), 0 4rpx 0rpx rgba(0,0,0,0.45) inset;
  text-align: center;
  align-items: center; 
}
.list{
  width:100%;
  height: 270rpx;
  display: block;
  overflow: auto;
  box-shadow: 0 1rpx 0 rgba(255,255,255,0.24), 0 1rpx 6px rgba(0,0,0,0.45) inset;
}
.list .thinglist{
  height: 100rpx;
  width:100%;
  position: relative;
  display: flex;
  text-align: center;
  align-items: center;  
}
image{
  display: inline-block;
  height: 50rpx;
  width: 50rpx;
  margin: 25rpx;
}
.delete{
  position: absolute;
  right: 30rpx;
  top:0;
}

.thinglist view{
  height: 100rpx;
  line-height: 100rpx;
  width: 500rpx;
  overflow: auto;
}
.list view{
  border-bottom: 1rpx dashed #eee;
}