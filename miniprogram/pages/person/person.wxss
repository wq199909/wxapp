/* pages/person/person.wxss */
.container .logged{
  width:750rpx;
  height: 100vh;
  background-color: #eeeeee;
}
.container .logged .personal{
  position: absolute;
  top:0rpx;
  left: 0rpx;
  height: 500rpx;
  width: 750rpx;
  background:linear-gradient(to bottom right,rgb(64,153,235),rgb(76,85,164));
  box-shadow: 10px 10px 5px #888888;
}
.container .logged .personal .picture{
  margin:100rpx 0 0 50rpx;
  height: 100rpx;
  width:100rpx;
  border-radius: 50rpx;
  border: 4rpx dashed #fff;
  overflow: hidden;
}
.container .logged .personal .name{
  height: 50rpx;
  margin:-100rpx 0 0 200rpx;
}
.container .logged .personal .sign{
  position: absolute;
  top:250rpx;
  left:100rpx;
  height: 200rpx;
  width:550rpx;
  background-color: #fff;
  color: #000;
  box-shadow: 5px 10px 5px #AAA;
}
.container .logged .personal .sign view{
  height: 70rpx;
  width: 500rpx;
  margin:0 25rpx;
  line-height: 70rpx;
  text-align: center;
  border-bottom: 1rpx dashed black;
}
.container .logged .personal .sign textarea{
  margin: 0 25rpx;
}
.container .logged .datas,
.container .logged .home,
.container .logged .sets{
  position: absolute;
  display: flex;
  text-align: center;
  justify-content: center; 
  align-items: center;
  height: 100rpx;
  width:500rpx;
  left:135rpx;
  background-color: #ffffff;
  border:2rpx solid black;
  box-shadow: 10px 10px 5px #888888;
}
.container .logged  .datas{
  top:550rpx;
}
.container .logged  .home{
  top:700rpx;
}
.container .logged .sets{
  top:850rpx;
}
/* 个性签名内容样式 */
.container .logged  .personal .sign .text{
  height:100rpx;
  width:500rpx;
}